{
	"name": "svelte-hover-draw-svg",
	"version": "2.0.1",
	"description": "A lightweight Svelte component to draw SVG on hover.",
	"author": "Peng Wei Che",
	"repository": "https://github.com/davipon/svelte-hover-draw-svg",
	"bugs": "https://github.com/davipon/svelte-hover-draw-svg/issues",
	"license": "MIT",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync && husky install",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"release": "standard-version --no-verify"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.1",
		"@commitlint/config-conventional": "^17.0.0",
		"@commitlint/cz-commitlint": "^17.0.0",
		"@playwright/test": "^1.22.2",
		"@sveltejs/adapter-auto": "1.0.0-next.48",
		"@sveltejs/kit": "1.0.0-next.345",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"commitizen": "^4.2.4",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"inquirer": "^8.2.4",
